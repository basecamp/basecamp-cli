# EditorConfig: https://editorconfig.org

root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go files - tabs per gofmt
[*.go]
indent_style = tab
indent_size = 4

# Makefiles - tabs required
[Makefile]
indent_style = tab
indent_size = 4

# YAML files - 2 space indent
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files - 2 space indent
[*.json]
indent_style = space
indent_size = 2

# Markdown - preserve trailing whitespace for line breaks
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# TOML (goreleaser, etc)
[*.toml]
indent_style = space
indent_size = 2

# Dockerfiles
[Dockerfile*]
indent_style = space
indent_size = 4
